{
  "name": "yt-audio-downloader",
  "version": "1.0.0",
  "description": "A simple YouTube audio downloader.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "youtube",
    "downloader",
    "audio",
    "electron"
  ],
  "author": "Bxthesda",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "yt-dlp-wrap": "^2.3.12"
  },
  "build": {
    "appId": "com.example.ytaudiodownloader",
    "productName": "YT Audio Downloader",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/yt-dlp-wrap/bin/yt-dlp.exe",
      "!**/node_modules/yt-dlp-wrap/bin/yt-dlp_macos",
      "!**/node_modules/yt-dlp-wrap/bin/yt-dlp_linux"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    },
    "asarUnpack": [
      "**/node_modules/yt-dlp-wrap/**"
    ]
  }
}
